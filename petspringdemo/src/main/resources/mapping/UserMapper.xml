<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.petspringdemo.mapper.UserMapper">

    
    <insert id="insertUser" parameterType="org.example.petspringdemo.entity.UserInfo"
            useGeneratedKeys="true" keyProperty="id">
        insert into U(username,password,email,identity)
            value ( #{username},#{password},#{email},#{identity})
    </insert>
    
    <select id="checkUserName" resultType="boolean">
        SELECT EXISTS (
            SELECT 1
            FROM U
            WHERE username = #{username}
        );
    </select>
    
    <select id="verify" resultType="int">
        SELECT COUNT(*)
        FROM u
        WHERE username = #{username} AND password = #{password};
    </select>

    <select id="getIdentity" resultType="String">
        SELECT identity from u where username = #{username};
    </select>

</mapper>